body
  margin: auto
  padding: 0px
  width: 1000px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  box-shadow: -10px 10px 5px #888888
  background-color: transparent
a
  color: #00B7FF
.title
  position: absolute
  z-index: 50
  padding-left: 10px
  color: #AAAAAA
  display: inline-block
  font-size: 24pt
.headertitle
  display: inline-block
  padding-top: 10px
  padding-left: 10px
  padding-right: 10px
  border-top-right-radius: 26px
  background-color: #6666DD
  width: 150px
  margin-top: 5px
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #6666DD), color-stop(100%, #2222DD))
  background: -moz-linear-gradient(top, #6666DD 0%, #2222DD 100%);
.header
	display: block
	padding: 0px
	border-top-left-radius: 10px
	border-top-right-radius: 10px
	background-color: black
	background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, black), color-stop(100%, #666666))
	background: -moz-linear-gradient(left, black 0%, #666666 100%);