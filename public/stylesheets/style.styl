body
  margin: auto
  padding: 0px
  width: 1000px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  box-shadow: -10px 10px 5px #888888
  background-color: transparent
.title
  position: absolute
  z-index: 50
  padding-left: 10px
  color: #F5F5F5
  display: inline-block
  font-size: 24pt
.headertitle
  display: inline-block
  padding-top: 10px
  padding-left: 10px
  padding-right: 10px
  border-top-right-radius: 26px
  background-color: #6666DD
  width: 150px
  margin-top: 5px
  background: -webkit-gradient(linear, center top, center bottom, color-stop(0%, #738CB1), color-stop(100%, #4866DF))
  background: -moz-linear-gradient(top, #738CB1 0%, #4866DF 100%);
.headertitle a
	color: black
	text-decoration: none
.header
	display: block
	padding: 0px
	border-top-left-radius: 10px
	border-top-right-radius: 10px
	background-color: black
	background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, black), color-stop(100%, #333333))
	background: -moz-linear-gradient(left, black 0%, #333333 100%);